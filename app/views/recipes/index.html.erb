<div class="container">
  <p class="mt-3">Recherchez une recette :</p>
  <div class="search-box">
    <%= simple_form_for :search, url: recipes_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Tapez une recette ou un ingrÃ©dient..." />
      <button name="button" type="submit" class="btn btn-primary">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
    <% end %>
  </div>
  <div class="index-recipes">
    <p class="mt-3">Ou parcourez la liste des recettes :</p>
    <div class="list-recipes">
      <% @recipes.each do |recipe| %>
        <div class="card">
          <%= link_to recipe_path(recipe) do %>
            <%= cl_image_tag recipe.photos.first.key, height: 272, width: 370, crop: :fill, class: 'card-img-top' %>
            <div class="card-body">
              <h3 class="card-text"><%= recipe.title %></h3>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
