<div class="modal fade" id="modalIngredients" tabindex="-1" role="dialog" aria-labelledby="modalIngredientsTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalIngredientsTitle">Ajouter un ingrédient</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @ingredient do |f| %>
         <%= f.input :name %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
         <%= f.submit "Ajouter l'ingrédient", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
