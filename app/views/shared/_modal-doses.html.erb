<div class="modal fade" id="modalDoses" tabindex="-1" role="dialog" aria-labelledby="modalDosesTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalDosesTitle">Ajouter une portion</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@recipe, @dose] do |f| %>
         <%= f.input :description, label: "Description de la portion", placeholder: 'Ex : 50 grammes de', error: 'Veuillez ajouter une portion' %>
         <%= f.association :ingredient, label: 'Sélectionnez un ingrédient', error: "Veuillez sélectionner un ingrédient"  %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
         <%= f.submit "Ajouter la portion", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
